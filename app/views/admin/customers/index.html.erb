<!DOCTYPE html>
<div class="col-md-8 offset-md-1">
 <h2>会員一覧</h2>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @customers.each do |customer| %>
<tr>
  <td>
   <%= customer.id %>
  </td>
  <td>
   <%= link_to customer.last_name + customer.first_name, "/admin/customers/#{customer.id}" %>

  </td>
  <td>
   <%= customer.email  %>
  </td>
  <td>
   <% if customer.is_deleted == false %>
    <%= customer.is_deleted = "有効" =%>
   <% else %>
    <%= customer.is_deleted = "無効" =%>
   <% end %>

  </td>
</tr>
 </div>
 <% end %>

</tbody>

 </table>
</div>
</main>
<h1>画像投稿フォーム</h1>
<%= form_with model: @item, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image_id %>
  <h4>商品名</h4>
  <%= f.string_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.integer_area :genre_id %>
  <h4>税抜価格</h4>
  <%= f.integer_area :price %>
  <%= f.submit '新規登録' %>
<% end %>
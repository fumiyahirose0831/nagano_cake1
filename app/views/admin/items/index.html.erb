<!DOCTYPE html>
<div class="col-md-8 offset-md-1">
 <h2>商品一覧</h2>
 <a href="new_admin_item_path" class="btn-circle-border-simple">＋</a>
   <i class="fa-solid fa-circle-plus"></i>

   <%= link_to  new_admin_item_path, class: "btn btn-dark" do %>
   <i class="fa-solid fa-circle-plus"></i>
   <% end %>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @items.each do |item| %>
<tr>
  <td>
   <%= item.id %>
  </td>
  <td>
   <%= link_to item.name, "/admin/items/#{item.id}" %>
  </td>
  <td>
   <%= item.price. to_s(:delimited) %>
  </td>
 </div>
 <% end %>
 
</tbody>

 </table>
</div>
</main>
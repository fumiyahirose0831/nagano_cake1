<!DOCTYPE html>
<div class="col-md-8 offset-md-1">
 <h2>商品一覧</h2>
<div class = "new">
  <%= link_to '＋', new_admin_item_path %>
</div>

  <table class="table table-hover table-inverse">
   <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @items.each do |item| %>
<tr>
  <td>
   <%= item.id %>
  </td>
  <td>
   <%= link_to item.name, "/admin/items/#{item.id}" %>
  </td>
  <td>
   <%= item.price. to_s(:delimited) %>
  </td>
 </div>
 <% end %>

</tbody>

 </table>
</div>
</main>
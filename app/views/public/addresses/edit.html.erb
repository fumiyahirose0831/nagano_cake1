<div class="col-md-8 offset-md-1">
<h3>配送先編集</h3>

<%= form_with model:@address,url: address_path, local:true do |f| %>
<div class="row">
 <table class="table table-hover table-borderless">
  <tr>
   <td>郵便番号(ハイフンなし)</td>
   <td>
    <%= f.text_field :postal_code %>
   </td>
  </tr>

  <tr>
   <td>住所</td>
   <td>
    <%= f.text_field :address, size: 42 %>
   </td>
 </tr>

 <tr>
   <td>宛名</td>
   <td>
    <%= f.text_field :name %>
   </td>
 </tr>

 <tr>
   <td>
  <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
   <% end %>
   </td>
 </tr>
 </table>
 </div>
</div>
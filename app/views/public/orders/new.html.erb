<div class = "container">

 <div class="row">

  <h4>注文情報入力</h4>

 </div>




  <h5>支払方法</h5>
  <%= form_with model:@order,url: orders_path, local:true do |f| %>
  <%= f.hidden_field :customer_id, :value => @customer.id %>

   <%= f.radio_button :payment_method, "credit_card" %>
   <%= f.label :payment_method, "クレジットカード" %>
   <%= f.radio_button :payment_method, "transfer" %>
   <%= f.label :payment_method, "銀行振込" %>
 

   <h5>お届け先</h5>
  <%= form_with model:@order,url: orders_path, local:true do |f| %>
   <%= f.radio_button :select_method, "ご自身の住所" %>
   <%= f.label :select_method, "ご自身の住所" %>
　　<p>〒<%= @customer.postal_code %> <%= @customer.address %>  <%= @customer.last_name %><%= @customer.first_name %></p>
   <%= f.radio_button :select_method, "新しいお届け先" %>
   <%= f.label :select_method, "新しいお届け先" %>
   <% end %>


 　<%= f.hidden_field :customer_id, :value => @customer.id %>
  <p>郵便番号(ハイフンなし)<%= f.text_field :postal_code %></p>
  <p>住所<%= f.text_field :address,  size: 40%></p>
  <p>宛名<%= f.text_field :name %></p>
  <% end %>

    </tbody>


</div>
